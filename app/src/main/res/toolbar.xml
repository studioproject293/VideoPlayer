<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/toolbar_home"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/toolbarbackround" android:contentInsetEnd="0dp"
    android:contentInsetLeft="0dp" android:contentInsetRight="0dp" android:contentInsetStart="0dp"
    android:fadingEdgeLength="1dp" android:translationZ="10dp" app:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp" app:contentInsetRight="0dp" app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="@dimen/spacing_xsmall"
    app:layout_scrollFlags="scroll|enterAlways">

    <LinearLayout android:id="@+id/head" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp" android:layout_marginTop="0dp"
        android:gravity="center|start" android:orientation="horizontal">

        <ImageView android:id="@+id/side_menu" android:layout_width="30dp"
            android:layout_height="match_parent" android:layout_marginLeft="10dp"
            android:src="@drawable/ic_icons_menu" />

        <FrameLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small" android:layout_weight="0.7">

            <ImageView android:id="@+id/logo" android:layout_width="100dp"
                android:layout_height="40dp" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_alignParentTop="true"
                android:layout_gravity="center" android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginTop="2dp" android:src="@drawable/ic_rapidboxfinal_logo_05"
                android:tint="@color/white" android:visibility="visible" />

            <TextView android:id="@+id/textheader" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:fontFamily="@font/open_sans_bold"
                android:maxLines="1" android:textAllCaps="true" android:textColor="@color/white"
                android:textSize="@dimen/text_medium" android:textStyle="bold"
                android:visibility="gone" />
        </FrameLayout>


        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_weight="0.3">
            <LinearLayout android:id="@+id/whishlisthome" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center|end"
                android:layout_marginRight="5dp" android:gravity="center|end"
                android:visibility="gone">

                <ImageView android:layout_width="20dp" android:layout_height="15dp"
                    android:src="@drawable/ic_icons_wishlist_mb" />

                <TextView style="@style/GenericTextViewBold" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="WISHLIST"
                    android:textColor="@color/white" />
            </LinearLayout>

            <ImageView android:id="@+id/search_bar_home" android:layout_width="0dp"
                android:layout_height="24dp" android:layout_marginTop="10dp"
                android:layout_weight="0.3" android:backgroundTint="@color/white"
                android:src="@drawable/ic_icons_search" android:visibility="visible" />

            <RelativeLayout android:id="@+id/badge_layout3" android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_toRightOf="@+id/search_bar_home"
                android:layout_weight="0.3" android:visibility="visible">

                <RelativeLayout android:id="@+id/relative_layout_item_count2"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginRight="10dp" android:visibility="visible">

                    <ImageView android:id="@+id/button3" android:layout_width="30dp"
                        android:layout_height="26dp" android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_icons_cart_hp" />
                </RelativeLayout>

                <TextView android:id="@+id/cart_count" android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignEnd="@+id/relative_layout_item_count2"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/relative_layout_item_count2"
                    android:background="@drawable/round_text_cart_item" android:gravity="center"
                    android:textColor="@color/Main_color" android:textSize="@dimen/text_small"
                    android:visibility="visible" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.Toolbar>

